@model IEnumerable<IDocument>

<p>This page contain information about the Package provided by the Rocket Surgerons Guild.</p>

@foreach(IDocument pkg in Model)
{
    string description = @pkg.String("Description");
    string author = @pkg.String("Author");
    string package = @pkg.String("NuGet");
    string repository = @pkg.String("repository");

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-puzzle-piece"></i> @pkg.String("Name")</h3>
        </div>
        <div class="panel-body">
            @if(!string.IsNullOrEmpty(description))
            {
                <p>@description</p>
            }    
            <dl class="dl-horizontal">	
                @if(!string.IsNullOrEmpty(author))
                {
                    <dt>Author</dt>
                    <dd>@author</dd>
                }
                @if(!string.IsNullOrEmpty(package))
                {
                    <dt>NuGet</dt>
                    <dd><a href="https://www.nuget.org/packages/@(package)">@package</a></dd>
                }
                @if(!string.IsNullOrEmpty(repository))
                {
                    <dt>Repository</dt>
                    <dd><a href="@(repository)">@repository</a></dd>
                }
            </dl>
        </div>
    </div>
}